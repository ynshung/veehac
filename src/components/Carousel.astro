<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: sans-serif;
    }

    .container {
        padding: 60px 0 60px 0;
    }

    .card-wrapper {
        /* max-width: 1100px; */
        margin: 0 150px 30px;
        overflow: hidden;
        padding: 20px 0 20px 0;
    }

    .card-list .card-item {
        list-style: none;
    }

    .card-list .card-item .card-link {
        width: 400px;
        user-select: none;
        display: block;
        padding: 18px;
        background: #fff;
        border-radius: 12px;
        text-decoration: none;
        border: 2px solid transparent;
        box-shadow: 0 10px 10px rgba(0, 0, 0, 0.05);
        transition: 0.4 ease;
    }

    .card-list .card-item .card-link:hover {
        border-color: #5372f0;
    }

    .card-list .card-link .card-image {
        width: 100%;
        aspect-ratio: 16/9;
        object-fit: cover;
        border-radius: 10px;
    }

    .card-list .card-link .badge {
        padding: 8px 16px;
        font-size: 0.95rem;
        font-weight: 500;
        margin: 16px 0 18px;
        width: fit-content;
        border-radius: 50px;
        background: #DDE4FF;
    }

    .card-list .card-link .card-title {
        font-size: 1.19rem;
        color: #000;
        font-weight: 600;
    }

    .card-list .card-link .card-button {
        height: 35px;
        width: 35px;
        border-radius: 50%;
        border: 2px solid #5372f0;
        color: #5372F0;
        margin: 30px 0 5px;
        background: none;
        cursor: pointer;
        transition: 0.4s ease;
    }

    .card-list .card-link:hover .card-button {
        color: #fff;
        background: #5372f0;

    }

    .swiper-button-prev {
        margin-left: 50px;
    }

    .swiper-button-next {
        margin-right: 50px;
    }
    
</style>

<script>
    import Swiper from "swiper/bundle";
    import 'swiper/css/bundle';

    new Swiper('.card-wrapper', {
        // Optional parameters
        loop: true,
        spaceBetween: 405,

        // Pagination
        pagination: {
            el: '.swiper-pagination',
            clickable: true
        },

        // Navigation arrows
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
        },
        breakpoints: {
            0: {
              slidesPerView: 1  
            },
            768: {
              slidesPerView: 2  
            },
            1024: {
              slidesPerView: 3  
            },
            1500: {
              slidesPerView: 4  
            },
            2000: {
              slidesPerView: 5  
            }
        }
    });
</script>


    

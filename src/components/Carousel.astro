---
import "swiper/css";

const developers = [
    { name: 'V191 Byte Benders', title: 'Crafting a powerful data visualization platform that helps companies "bend" complex data into interactive, easy-to-understand insights for smarter decisions.' },
    { name: 'V333 Code Crusaders', title: 'Developing a real-time crisis response app that empowers users to report and navigate emergencies using geolocation and community-driven information.' },
    { name: 'V111 Digital Dreamers', title: 'Building an AI-powered platform that helps people turn ideas into reality by generating prototypes, branding elements, and marketing plansâ€”all from a single prompt.' },
    { name: 'V069 Nerd Herd', title: 'Designing a collaborative coding platform where teams can code in real time, access helpful resources, and troubleshoot together in a streamlined environment.' },
    { name: 'V055 Quantum Quokkas', title: 'Innovating a quantum-powered encryption service that allows users to securely share sensitive files with impenetrable privacy in milliseconds.' },
    { name: 'V102 Syntax Samurai', title: 'Creating an AI-powered code correction tool that detects and repairs errors in real time, saving developers from syntax struggles and boosting productivity.' },
    { name: 'V010 Hackstreet Boys', title: 'Developing a gamified wellness app that encourages healthier lifestyle choices through fun challenges, badges, and leaderboards.' },
    { name: 'V123 Cyber Guardians', title: 'Building a cybersecurity platform that helps small businesses detect, prevent, and respond to threats using machine learning and real-time alerts.' },
];
---

<head>
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
  />
  <link
    rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=visibility"
  />
</head>
<body>
  <div class="container swiper">
    <div class="card-wrapper">
      <ul class="card-list swiper-wrapper">
        {
          developers.map((dev) => (
            <li class="card-item swiper-slide">
              <a
                href="javascript:void(0)"
                class="card-link"
                data-name={dev.name}
                data-title={dev.title}
                data-description={dev.title}
              >
                <img src="anonymous.jpg" alt="Card Image" class="card-image" />
                <p class="badge">{dev.name}</p>
                <h2 class="card-title">{dev.title}</h2>
                <button class="card-button material-symbols-rounded">
                  visibility
                </button>
              </a>
            </li>
          ))
        }
      </ul>
      <div class="swiper-pagination"></div>
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
    </div>
  </div>

<div class="modal" id="modal" style="display: none;">
    <div class="modal-content">
        <span class="close" id="close">&times;</span>
        <div class="video-container">
            <iframe 
                id="modal-video" 
                class="modal-video" 
                src="" 
                frameborder="0" 
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                allowfullscreen>
            </iframe>
        </div>
        <h2 id="modal-name"></h2>
        <p id="modal-title"></p>
        <p id="modal-description"></p>
    </div>
</div>



</body>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    overflow-x: hidden;
    height: 100%;
  }


/* Adjust the size of the video container */
.video-container {
    position: relative;
    width: 100%; /* Decrease width to make video smaller */
    padding-top: 56.25%; /* Maintain 16:9 aspect ratio */
    overflow: hidden;
    border-radius: 10px;
    margin-bottom: 20px;
}

/* Adjust the iframe size inside the container */
.video-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%; /* Ensure it fills the container */
    height: 100%; /* Maintain aspect ratio */
    border: none;
}

  .container {
    margin: 40px;
    display: flex;
    justify-content: center;
  }

  .card-wrapper {
    max-width: 1500px;
    overflow: hidden;
    padding: 20px 0px 20px 0px;
  }

  .card-list .card-item {
    list-style: none;
  }

.card-list .card-item .card-link {
    width: 400px;
    min-height: 550px;
    user-select: none;
    display: block;
    padding: 18px;
    background: #fff;
    border-radius: 12px;
    text-decoration: none;
    border: 2px solid transparent;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2); /* More prominent shadow */
    transition: 0.3s ease; /* Smooth transition for hover effect */
}

    
    .card-list .card-item .card-link:hover {
        border-color: #5372f0;
    }

  .card-list .card-link .card-image {
    width: 100%;
    // aspect-ratio: 16/9;
    object-fit: cover;
    border-radius: 10px;
  }

  .card-list .card-link .badge {
    padding: 8px 16px;
    font-size: 0.95rem;
    font-weight: 500;
    margin: 16px 0 18px;
    width: fit-content;
    border-radius: 50px;
    background: #dde4ff;
  }

    .card-list .card-link .card-title {
        font-size: 1.19rem;
        color: #555;
        font-weight: normal;
    }

  .card-list .card-link .card-button {
    height: 35px;
    width: 35px;
    border-radius: 50%;
    border: 2px solid #5372f0;
    color: #5372f0;
    margin: 30px 0 5px;
    background: none;
    cursor: pointer;
    transition: 0.4s ease;
  }

  .card-list .card-link .card-button:hover {
    color: #fff;
    background: #5372f0;
  }

  .swiper-button-prev {
    margin-left: -10px;
  }

  .swiper-button-next {
      margin-right: -10px;
  }
  
  /* Modal Styles */
  .modal {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0) 0%, 
        rgba(0, 0, 0, 0.5) 20%, 
        rgba(0, 0, 0, 0.5) 80%, 
        rgba(0, 0, 0, 0) 100%
    );
    display: none;
    justify-content: center;
    align-items: center;
    z-index: 9999;
    animation: fadeInTop 0.2s ease-out forwards;
    user-select: none;
}



  /* Modal Image Styles */
  .modal-image {
    width: 100%;
    height: auto;
    max-width: 250px; /* Increase image size */
    margin-bottom: 20px;
    border-radius: 10px;
  }


.modal-content {
    background-color: white;
    padding: 40px;
    border-radius: 15px;
    width: 100%; /* Decrease width to make modal smaller */
    max-width: 600px; /* Set a maximum width */
    text-align: center;
    position: relative;
}

  /* Modal Name Styles */
  #modal-name {
    font-size: 2rem; /* Increase font size */
    font-weight: bold;
    color: black;
    margin-bottom: 15px;
  }

  #modal-title {
    font-size: 1.5rem; /* Increase font size */
    color: #555;
    margin-bottom: 15px;
  }

  #modal-description {
    font-size: 1.2rem; /* Increase font size */
    color: #333;
    margin-top: 10px;
    line-height: 1.5; /* Improve readability */
  }

    /* Close Button Styles */
    .close {
        position: absolute;
        top: 20px; /* Adjust close button position */
        right: 20px;
        font-size: 2rem; /* Increase size of close button */
        cursor: pointer;
        color: #555;
    }

  .close:hover {
    color: red;
  }

    @keyframes fadeInTop {
        0% {
            opacity: 0;
            transform: translateY(20px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    



</style>

<script>
  import Swiper from "swiper/bundle";
  import "swiper/css/bundle";

  new Swiper(".card-wrapper", {
    loop: true,
    speed: 1000,
    autoplay: {
        delay: 3000,
    },
    effect: 'coverflow',
    grabCursor: true,
    centeredSlides: true,
    slidesPerView: 'auto',
    coverflowEffect: {
        rotate: 0,
        stretch: 80,
        depth: 100,
        modifier: 1,
        slideShadows: false,
    },
    navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
    },
    breakpoints: {
        320: { slidesPerView: 1, spaceBetween: 10 },
        768: { slidesPerView: 2, spaceBetween: 15 },
        1024: { slidesPerView: 3, spaceBetween: 20 },
        1440: { slidesPerView: 4, spaceBetween: 25 },
    },
});




document.querySelectorAll('.card-button').forEach(button => {
    button.addEventListener('click', function() {
        const cardItem = button.closest('.card-item');
        
        // Retrieve data from the clicked card
        const name = cardItem.querySelector('.badge').textContent; 
        const title = cardItem.querySelector('.card-title').textContent; 
        const description = cardItem.getAttribute('data-description'); 

        // Define YouTube Embed URL
        const youtubeUrl = `https://www.youtube.com/embed/dQw4w9WgXcQ`; // Replace with the actual video URL as needed

        // Show the modal and populate with the corresponding data
        const modal = document.getElementById('modal');
        const modalVideo = document.getElementById('modal-video');

        document.getElementById('modal-name').textContent = name;
        document.getElementById('modal-title').textContent = title;
        document.getElementById('modal-description').textContent = description;

        // Set the iframe src to the YouTube URL
        modalVideo.src = youtubeUrl;

        modal.style.display = 'flex'; // Make modal visible
    });
});

// Close modal logic
document.getElementById('close').addEventListener('click', () => {
    const modal = document.getElementById('modal');
    const modalVideo = document.getElementById('modal-video');

    modal.style.display = 'none'; // Hide modal
    modalVideo.src = ''; // Clear the iframe src to stop playback
});

window.addEventListener('click', (event) => {
    const modal = document.getElementById('modal');
    const modalVideo = document.getElementById('modal-video');

    if (event.target === modal) {
        modal.style.display = 'none'; // Hide modal
        modalVideo.src = ''; // Clear the iframe src to stop playback
    }
});




</script>

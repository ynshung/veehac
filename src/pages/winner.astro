---
import NavBar from '../components/NavBar.astro';
import Carousel from '../components/Carousel.astro';
import Footer from '../components/Footer.astro';
import Layout from "../layouts/Layout.astro";

const winners = [
    { label: 'Champion', name: 'V001 PathFinder', description: 'PathFinder optimizes delivery routes using real-time data like traffic and weather, helping businesses save time, reduce fuel costs, and improve efficiency.', imageSrc: 'anonymous.jpg', class: 'winner', icon: 'gold' },
    { label: 'Second Place', name: 'V002 SkyRunner', description: 'SkyRunner uses drones and AI for aerial data collection in agriculture, conservation, and infrastructure inspection, offering high-resolution mapping and analysis.', imageSrc: 'anonymous.jpg', class: 'runner-up', icon: 'silver' },
    { label: 'Third Place', name: 'V003 CodeSprint', description: 'CodeSprint is a real-time, browser-based platform for hackathons and coding competitions, providing integrated coding, debugging, and testing features.', imageSrc: 'anonymous.jpg', class: 'runner-up', icon: 'bronze' },
];
---

<Layout title="VeeHac">
  <div class="modal2" id="modal2" style="display: none;">
    <div class="modal2-content">
        <span class="close2" id="close2">&times;</span>
        <div class="video-container">
            <iframe id="modal2-video" class="modal2-video" src="" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
        <h2 id="modal2-name"></h2>
        <p id="modal2-title"></p>
        <p id="modal2-description"></p>
    </div>
  </div>
  <div id="overlay" class="overlay"></div>
    <NavBar backgroundColor="#433f6c" />

  <!-- Header Section -->
  <header class="header">
    <h1>Hackathon Winning Projects</h1>
    <p class="title-desc">
      A compilation of all the wonderful winning projects
    </p>
  </header>

  <!-- Trophy Section -->
  <section class="trophy-section">
    <div class="trophy-icon">üèÜ</div> <!-- Trophy Icon -->
  </section>

  <!-- Winner Section -->
  <section class="winner">
    <div class="winner-label">Champion</div>
    <div class="winner-content">
      <div class="winner-image">
        <div class="image-overlay"></div>
        <img src="anonymous.jpg" alt="Champion Image" />
        <div class="medal-icon gold">ü•á</div> <!-- Gold Medal Icon -->
      </div>
      <div class="winner-description">
        <h2>{winners[0].name}</h2>
        <p>{winners[0].description}</p>
        <button class="card-button material-symbols-rounded" onclick="openModal(0)">visibility</button> <!-- Visibility Icon Button -->
      </div>
    </div>
  </section>

  <!-- Runner-up Sections -->
  <div class="runner-up-places">
    {winners.slice(1).map((winner) => (
      <section class="runner-up">
        <div class="runner-up-label">{winner.label}</div>
        <div class="runner-up-content">
          <div class="runner-up-image">
            <div class="image-overlay"></div>
            <img src={winner.imageSrc} alt="Runner-up Image" />
            <div class={`medal-icon ${winner.icon}`}>{winner.icon === 'silver' ? 'ü•à' : winner.icon === 'bronze' ? 'ü•â' : ''}</div>
          </div>
          <div class="runner-up-description">
            <h2>{winner.name}</h2>
            <p>{winner.description}</p>
            <button class="card-button material-symbols-rounded" onclick="openModal(0)">visibility</button> <!-- Visibility Icon Button -->

          </div>
        </div>
      </section>
    ))}
  </div>

  <!-- Consolation Prizes Section -->
  <section class="consolation-prizes">
    <h2>Consolation Prizes</h2>
  </section>

  <!-- Carousel Section -->
  <div class="carousel-wrapper"><Carousel /></div>


  <Footer />
</Layout>

<style>
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: "Chesna Grotesk", sans-serif;
  background-color: #433f6c;
  color: white;
  height: 100vh;
}

a {
  color: inherit;
  text-decoration: none;
}

.overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.7); /* Dark transparent background */
    z-index: 9998; /* Slightly lower than the modal2 so it's behind it */
    display: none; /* Hidden by default */
}

/* Header */
.header {
  text-align: center;
  margin: 2rem 0;
  opacity: 0;
  cursor: default;
  user-select: none;
  animation: fadeInTop 1s ease-out forwards;
}

.header h1 {
  font-size: 4.5rem;
  font-weight: bold;
  padding: 30px 0;
  cursor: default;
  user-select: none;
  transition: transform 0.3s ease-in-out;
}

.header .title-desc {
  font-size: 2rem;
  font-weight: normal;
  transition: transform 0.3s ease-in-out;
}

.header h1:hover, .header .title-desc:hover {
  transform: scale(1.1);
}

/* Trophy Section */
.trophy-section {
  text-align: center;
  position: relative;
  padding-bottom: 30px;
}

.trophy-icon {
  font-size: 10rem; /* Large size for the trophy */
  color: gold;
  animation: bounceAnimation 1s ease-out forwards;
  transform-origin: center bottom;
  user-select: none;
  transition: 0.25s ease-in-out;
  display: inline-block;
}

.trophy-icon:hover {
  scale: 1.2;
}

/* Bounce Animation */
@keyframes bounceAnimation {
  0% {
    transform: translateY(-50px) scale(0.8);
    opacity: 0;
  }
  30% {
    transform: translateY(0) scale(1.1);
    opacity: 1;
  }
  50% {
    transform: translateY(-20px) scale(1);
  }
  70% {
    transform: translateY(0) scale(1.05);
  }
  100% {
    transform: translateY(0) scale(1);
  }
}

/* Winner Section */
.winner {
  background-color: white;
  color: black;
  padding: 20px;
  border-radius: 20px;
  width: 80%;
  max-width: 1200px;
  margin: 0 auto 20px;
  text-align: left;
  min-height: 500px;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  opacity: 0;
  animation: fadeInTop 1s ease-out forwards;
  animation-delay: 0.25s;
}

.carousel-wrapper {
  opacity: 0;
  animation: fadeInTop 1s ease-out forwards;
  animation-delay: 0.75s;
  margin-bottom: 0; /* Ensure no gap below the carousel */
  padding-bottom: 0; /* Remove any internal spacing */
  position: relative;
  bottom: 0;
}


.winner-label {
  font-size: 2rem;
  font-weight: bold;
  background-color: #a093ff;
  color: white;
  padding: 15px 10px;
  border-radius: 10px;
  display: flex;
  justify-content: center;
  margin-bottom: 15px;
  transition: transform 0.3s ease-in-out;
  cursor: default;
}

.winner-label:hover {
  transform: scale(1.03);
}

.winner-content {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 5%;
  flex-wrap: wrap;
  width: 100%;
}

.winner-image {
  position: relative;
  width: 40%;
  height: auto;
  overflow: hidden;
  border-radius: 10px;
  flex-grow: 1;
}

.winner-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  transition: filter 0.3s ease-in-out;
}

.winner-description {
  width: 55%;
  flex-grow: 1;
}

.winner-description h2 {
  font-size: 2rem;
  font-weight: bold;
  margin-bottom: 20px;
}

.winner-description p {
  font-size: 1.5rem;
  color: #555;
  line-height: 1.6;
}

/* Medal Icon Hover Effect */
.medal-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 3rem;
  opacity: 0;
  transition: opacity 0.3s ease, transform 0.3s ease;
  user-select: none;
  cursor: default;
}

.winner-image:hover .medal-icon, .runner-up-image:hover .medal-icon {
  opacity: 1;
  transform: translate(-50%, -50%) scale(1.2); /* Slightly enlarge on hover */
}

.medal-icon.gold {
  color: gold;
}

.medal-icon.silver {
  color: silver;
}

.medal-icon.bronze {
  color: #cd7f32;
}

/* Runner-up Section */
.runner-up-places {
  display: flex;
  justify-content: center;
  gap: 20px;
  margin: 0 auto;
  width: 80%;
}

.runner-up {
  background-color: white;
  color: black;
  padding: 20px;
  border-radius: 20px;
  min-height: 400px;
  text-align: left;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  max-width: 1200px;
  overflow: hidden;
  opacity: 0;
  animation: fadeInTop 1s ease-in forwards;
  animation-delay: 0.5s;
}

.runner-up-label {
  font-size: 2rem;
  font-weight: bold;
  background-color: #a093ff;
  color: white;
  padding: 15px 10px;
  border-radius: 10px;
  display: flex;
  justify-content: center;
  margin-bottom: 15px;
  transition: transform 0.3s ease-in-out;
}

.runner-up-label:hover {
  transform: scale(1.05);
}

.runner-up-content {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 5%;
  flex-wrap: wrap;
  width: 100%;
}

.runner-up-image {
  position: relative;
  width: 45%;
  height: auto;
  overflow: hidden;
  border-radius: 10px;
  flex-grow: 1;
}

.runner-up-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: filter 0.3s ease-in-out; /* Smooth transition */
}

.runner-up-image:hover img {
  filter: brightness(50%) blur(2px); /* Darken and blur image on hover */
}

.winner-image:hover img {
  filter: brightness(50%) blur(2px);
}

.runner-up-description {
  width: 50%;
  flex-grow: 1;
}

.runner-up-description h2 {
  font-weight: bold;
  margin-bottom: 20px;
  font-size: 2rem;
}

.runner-up-description p {
  color: #555;
  line-height: 1.6;
  font-size: 1.5rem; 
}

.consolation-prizes {
  text-align: center;
  margin: 5rem 6rem 2rem 6rem;
  border-radius: 10px;
  user-select: none;
  opacity: 0;
  animation: fadeInTop 1s ease-in forwards;
  animation-delay: 0.75s;
}

.consolation-prizes h2 {
  font-size: 2.5rem;
  font-weight: bolder;
  color: white;
  padding: 10px 0;
  text-transform: uppercase;
  letter-spacing: 1px;
}

/* Animations */
@keyframes fadeInTop {
  0% {
    opacity: 0;
    transform: translateY(20px);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

@media (max-width: 1024px) {
  .runner-up-places {
    flex-direction: column; /* Change to column layout */
    align-items: center; /* Center align the items */
  }

  .runner-up {
    width: 100%; /* Make each item take the full width */
    max-width: 1000px; /* Optionally limit the max width */
  }

    /* Winner Section: Adjust layout for smaller screens */
    .winner-content {
    flex-direction: column; /* Stack items vertically */
    align-items: center; /* Center align items */
  }

  .winner-image {
    width: 100%; /* Full width for the image */
    margin-bottom: 20px; /* Add spacing below the image */
  }

  .winner-description {
    text-align: center; /* Center align the text */
    width: 100%; /* Full width for the description */
  }

  /* Runner-up Section: Adjust layout for smaller screens */
  .runner-up-content {
    flex-direction: column; /* Stack items vertically */
    align-items: center; /* Center align items */
  }

  .runner-up-image {
    width: 100%; /* Full width for the image */
    margin-bottom: 20px; /* Add spacing below the image */
  }

  .runner-up-description {
    text-align: center; /* Center align the text */
    width: 100%; /* Full width for the description */
  }
}

@media (max-width: 1280px) {
    /* Runner-up Section: Adjust layout for smaller screens */
    .runner-up-content {
    flex-direction: column; /* Stack items vertically */
    align-items: center; /* Center align items */
  }

  .runner-up-image {
    width: 100%; /* Full width for the image */
    margin-bottom: 20px; /* Add spacing below the image */
  }

  .runner-up-description {
    text-align: center; /* Center align the text */
    width: 100%; /* Full width for the description */
  }

  .runner-up-places {
    align-items: center; /* Center align the items */
  }


}

.card-button {
        font-size: 1.5rem;
        padding: 10px 15px;
        background-color: #a093ff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        color: white;
        transition: background-color 0.3s;
    }

    .card-button:hover {
        background-color: #7f75f7;
    }



    .close2 {
        position: absolute;
        top: 10px;
        right: 20px;
        font-size: 2rem;
        cursor: pointer;
        color: #555;
    }

    .close2:hover {
      color: red;
    }

    .video-container {
      position: relative;
      display: flex;
      justify-content: center;
      width: 100%; /* Decrease width to make video smaller */
      padding-top: 56.25%; /* Maintain 16:9 aspect ratio */
      overflow: hidden;
      border-radius: 10px;
      margin-bottom: 20px;
    }

    .video-container iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%; /* Ensure it fills the container */
        height: 100%; /* Maintain aspect ratio */
        border: none;
    }

/* modal2 Styles */
.modal2 {
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed; /* Position it relative to the viewport */
    top: 0%; /* Position it 50% from the top */
    left: 0%; /* Position it 50% from the left */
    transform: translate(50%, 50%); /* Offset by 50% of the modal2's width and height to center it */
    width: 100%;
    height: 100%; /* Let the height adjust based on content */
    display: none; /* Hidden by default */
    z-index: 9999; /* Make sure it stays on top of other content */
    animation: fadeInTop 0.2s ease-out forwards; /* Animation when appearing */
    user-select: none; /* Disable text selection */
}

.modal2-content {
  position: relative;
  background-color: white;
  padding: 40px;
  border-radius: 15px;
  width: 100%;
  max-width: 800px;
}
.modal2-image {
    width: 100%;
    height: auto;
    max-width: 250px; /* Adjust the image size */
    margin-bottom: 20px;
    border-radius: 10px;
}

#modal2-name {
    font-size: 2rem; /* Adjust font size for name */
    font-weight: bold;
    color: black;
    margin-bottom: 15px;
    text-align: center;
}

#modal2-title {
    font-size: 1.5rem;
    color: #555;
    margin-bottom: 15px;
}

#modal2-description {
    font-size: 1.2rem;
    color: #333;
    margin-top: 10px;
    line-height: 1.5;
    text-align: center;
}




</style>

<script>
  document.querySelectorAll('.card-button').forEach(button => {
    button.addEventListener('click', function() {
      // Retrieve the relevant data for the clicked winner/runner-up
      const winnerSection = button.closest('.winner') || button.closest('.runner-up');
      const name = winnerSection.querySelector('h2').textContent;
      const description = winnerSection.querySelector('p').textContent;

      // You can change this to match the specific media source or YouTube link for each winner
      const youtubeUrl = `https://www.youtube.com/embed/dQw4w9WgXcQ`; // Replace with actual YouTube link or other media URL

      // Populate the modal2 with the winner's details
      document.getElementById('modal2-name').textContent = name;
      document.getElementById('modal2-description').textContent = description;
      document.getElementById('modal2-video').src = youtubeUrl; // Set the video iframe source

      // Show the modal2
      document.getElementById('modal2').style.display = 'flex'; // Make the modal2 visible
      document.getElementById('overlay').style.display = 'block'; // Show overlay
    });
  });

  // close2 the modal2 when the close2 button is clicked
  document.getElementById('close2').addEventListener('click', () => {
    const modal2 = document.getElementById('modal2');
    const modalVideo = document.getElementById('modal2-video');

    modal2.style.display = 'none'; // Hide modal2
    modalVideo.src = ''; // Clear the iframe src to stop playback
    document.getElementById('overlay').style.display = 'none'; // Hide overlay
});

  // close2 the modal2 if clicked outside the modal2 content
  window.addEventListener('click', (event) => {
    const modal2 = document.getElementById('modal2');
    const modalVideo = document.getElementById('modal2-video');

    if (event.target === modal2) {
        modal2.style.display = 'none'; // Hide modal2
        modalVideo.src = ''; // Clear the iframe src to stop playback
        document.getElementById('overlay').style.display = 'none'; // Hide overlay

    }
});
</script>
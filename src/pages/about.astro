---
import NavBar from "../components/NavBar.astro";
import Layout from "../layouts/Layout.astro";
import PersonCard from "../components/PersonCard.astro";
import Footer from "../components/Footer.astro";

// imageUrl, name, company, about
const judges = [
  {
    imageUrl: "https://via.placeholder.com/150",
    name: "John Doe",
    company: "Google",
    about: "John Doe is a software engineer at Google. He has been working in the tech industry for over 10 years and has a passion for building innovative products.",
  },
  {
    imageUrl: "https://via.placeholder.com/150",
    name: "Jane Smith",
    company: "Facebook",
    about: "Jane Smith is a product manager at Facebook. She has a background in design and user experience, and is passionate about creating products that people love.",
  },
  {
    imageUrl: "https://via.placeholder.com/150",
    name: "Alice Johnson",
    company: "Amazon",
    about: "Alice Johnson is a data scientist at Amazon. She has a background in machine learning and artificial intelligence, and is interested in using data to drive business decisions.",
  },
  {
    imageUrl: "https://via.placeholder.com/150",
    name: "Bob Brown",
    company: "Microsoft",
    about: "Bob Brown is a software engineer at Microsoft. He has a background in web development and cloud computing, and is passionate about building scalable and reliable systems.",
  },
  {
    imageUrl: "https://via.placeholder.com/150",
    name: "Eve White",
    company: "Apple",
    about: "Eve White is a product designer at Apple. She has a background in industrial design and user research, and is passionate about creating beautiful and intuitive products.",
  },
  {
    imageUrl: "https://via.placeholder.com/150",
    name: "Alex Green",
    company: "Netflix",
    about: "Alex Green is a data analyst at Netflix. He has a background in statistics and data visualization, and is interested in using data to improve user experience.",
  },
  {
    imageUrl: "https://via.placeholder.com/150",
    name: "Sarah Blue",
    company: "Uber",
    about: "Sarah Blue is a product manager at Uber. She has a background in business and marketing, and is passionate about creating products that solve real-world problems.",
  },
  {
    imageUrl: "https://via.placeholder.com/150",
    name: "Chris Grey",
    company: "Twitter",
    about: "Chris Grey is a software engineer at Twitter. He has a background in mobile development and social media, and is passionate about building products that connect people.",
  },
]

---
<Layout title="VeeHac">
    <NavBar backgroundColor="#433f6c" />
    <div class="body">
        <div class="judges">
            <div >
                <p style="font-size: 36px; padding:20px">Judges</p>
            </div>
            
            <div class="judge-cards">
                {
                    judges.map((judge, index) => (
                        <PersonCard imageUrl={judge.imageUrl} name={judge.name} company={judge.company} about={judge.about} />
                    ))
                }
            </div>
        </div>

</div>


  
    <Footer />
  </Layout>


  <style>
    .body{
    background-color: #433f6c;
    align-items: center;
    justify-items: center;
    text-align: center;
}
p{
    margin-block-start: 0em;
    margin-block-end: 0em;
}
.judges{
    padding-top: 50px;
    padding-bottom: 50px;
}

.judge-cards {
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 16px; /* Adjust the gap between items */
  justify-content: space-around; /* Optional, controls the alignment of items in the row */
} 

@media (max-width: 800px) {
  .judge-cards {
    grid-template-columns: repeat(2, minmax(0, 1fr));
  }
}

@media (max-width: 520px) {
  .judge-cards {
    grid-template-columns: repeat(1, minmax(0, 1fr));
  }
}
const targetDate = new Date("2023-12-31T19:36:40");

const currentDate = new Date();

const showCaseStudies = currentDate < targetDate;
---

<Layout title="VeeHac">
  <NavBar backgroundColor="#827BD2" />
  <div class="body">
    <div>
      <div class="title-tagline">
        <p style="font-size: 48px;">what's your favourite</p>
        <p style="font-size: 168px; font-weight: 900; margin-top: -40px;">
          IDEA?
        </p>
      </div>
      <div class="title-circle"></div>
      <div class="title-mascot">
        <img src="/mascot.png" alt="man" />
      </div>
      <div class="title-content-left">
        <p>Veehac 2025</p>
      </div>
      <div class="title-content-right">
        <p>
          Do you have good ideas?<br/>Then join us now!
        </p>
      </div>
    </div>
    <div class="about">
      <div class="about-content">
        <div>
          <p style="font-size: 36px;">ABOUT US</p>
        </div>
        <div>
          <p style="font-size: 48px; font-weight: 900; color: #89AFFF;">
            CODE, CREATE, COLLAB
          </p>
        </div>
        <div class="about-paragraph">
          We are HTML (Help and Tips for Machine Learning) Society in USM. This
          is our first hackathon! We are excited to see what you can come up
          with and are looking for innovative ideas that can change the world.
        </div>
      </div>{
        showCaseStudies ? (
          <Countdown targetDate={targetDate} />
        ) : (
          <CaseStudies />
        )
      }
    </div>
    <div class="timeline" id="timeline">
      <div><p style="font-size: 36px;">TIMELINE</p></div>
      <Timeline timelineData={timelineData} />
    </div>
    <div class="faq" id="faq">
      <div><p style="font-size: 36px;">FAQ</p></div>
      <FAQ items={faqItems} />
    </div>
  </div>
  <Footer />
</Layout>

<style>
  .body {
    font-family: "Chesna Grotesk";
    background: linear-gradient(#827bd2 0px, #433f6c 70vh);
    margin: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  p {
    margin-block-start: 0em;
    margin-block-end: 0em;
  }
  .title-tagline {
    display: flex;
    flex-direction: column;
    color: #faf9f6;
    text-align: center;
  }
  .title-circle {
    background-color: #433f6c;
    min-width: 950px;
    min-height: 500px;
    border-radius: 999px 999px 0 0;
    position: relative;
    bottom: 50px;
  }
  .title-mascot {
    align-items: center;
    justify-content: center;

    display: flex;
    position: absolute;
    top: 250px;
  }
  .title-mascot img {
    width: 700px;
    position: relative;
    left: 100px;
    mask-image: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 1) 50%,
      rgba(0, 0, 0, 0) 90%
    );
  }

  .title-content-left {
    display: flex;
    position: absolute;
    top: 600px;
    left: 25vh;
    font-weight: 900;
    font-size: 48px;
    width: 300px;
    text-align: center;
  }

  .title-content-right {
    display: flex;
    position: absolute;
    text-align: center;
    top: 600px;
    right: 25vh;
    width: 300px;
  }
  @media only screen and (max-width: 1100px) {
  .title-content-left {
    top: 500px;width: 100vw;
    left:0;
    justify-content: center;
  }

    .title-content-right {
    top: 600px;width: 100vw;
    left:0;
    justify-content: center;
  }
  .title-content-right p{
    width:300px;
  }
}
  /* abouts */

  .about {
    text-align: center;
    align-items: center;
    justify-items: center;
    padding-top: 50px;
    padding-bottom: 50px;
  }

  .about-paragraph {
    text-align: center;
    max-width: 1000px;
  }
  .about-content {
    margin-bottom: 40px;
  }

  /* timeline */
  .timeline {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    justify-items: center;
    width: 100%;
    padding-top: 50px;
    padding-bottom: 50px;
  }

  /* FAQ */
  .faq {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    justify-items: center;
    width: 100%;
    padding-top: 50px;
    padding-bottom: 50px;
  }
</style>
